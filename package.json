{
  "name": "curtaincall",
  "version": "0.1.0",
  "description": "Curtain Call browser game scaffolding",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.json && node scripts/copy-help.mjs",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"styles/**/*.css\" index.html",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"styles/**/*.css\" index.html",
    "check": "npm run lint && npm run build",
    "test": "vitest run"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "^2.29.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.2.5",
    "typescript": "5.5.4",
    "vitest": "^3.2.4"
  }
}
